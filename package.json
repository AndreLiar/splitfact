{
  "name": "splitfact-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest tests/api --verbose",
    "test:integration": "jest tests/integration --verbose",
    "test:e2e": "playwright test",
    "test:all": "npm run test:api && npm run test:integration",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "db:backup": "chmod +x scripts/backup-db.sh && ./scripts/backup-db.sh",
    "db:restore": "chmod +x scripts/restore-db.sh && ./scripts/restore-db.sh",
    "db:health": "curl -s http://localhost:3000/api/health/database | jq .",
    "db:maintenance": "chmod +x scripts/db-maintenance.sh && ./scripts/db-maintenance.sh",
    "db:setup-cron": "chmod +x scripts/setup-cron.sh && ./scripts/setup-cron.sh",
    "db:schema-backup": "chmod +x scripts/backup-to-git.sh && ./scripts/backup-to-git.sh",
    "pwa:validate": "node scripts/pwa-setup.js",
    "pwa:icons": "chmod +x scripts/generate-pwa-icons.sh && ./scripts/generate-pwa-icons.sh",
    "pwa:build": "npm run pwa:validate && npm run build"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.70",
    "@google/generative-ai": "^0.24.1",
    "@langchain/community": "^0.3.49",
    "@langchain/core": "^0.3.66",
    "@langchain/google-genai": "^0.2.14",
    "@langchain/langgraph": "^0.4.0",
    "@langchain/openai": "^0.6.3",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@next/third-parties": "^15.4.5",
    "@notionhq/client": "^4.0.2",
    "@prisma/client": "^6.11.1",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-pdf/renderer": "^4.3.0",
    "@stripe/stripe-js": "^7.4.0",
    "@types/react-datepicker": "^6.2.0",
    "bcryptjs": "^3.0.2",
    "bootstrap": "^5.3.7",
    "cheerio": "^1.1.2",
    "chromadb": "^3.0.10",
    "cloudinary": "^2.7.0",
    "csv-parser": "^3.2.0",
    "framer-motion": "^12.23.0",
    "google-search-results-nodejs": "^2.1.0",
    "idb": "^8.0.0",
    "langchain": "^0.3.30",
    "next": "15.3.5",
    "next-auth": "^4.24.11",
    "next-pwa": "^5.6.0",
    "next-transpile-modules": "^10.0.1",
    "openai": "^4.62.1",
    "playwright": "^1.55.0",
    "prisma": "^6.11.1",
    "react": "^19.0.0",
    "react-bootstrap": "^2.10.10",
    "react-datepicker": "^8.4.0",
    "react-dom": "^19.0.0",
    "resend": "^4.6.0",
    "stripe": "^18.3.0",
    "uuid": "^11.1.0",
    "workbox-webpack-plugin": "^7.0.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "node-mocks-http": "^1.17.2",
    "nodemailer": "^6.10.1",
    "puppeteer": "^24.16.1",
    "supertest": "^7.1.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
